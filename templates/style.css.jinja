:root {
    --bg-primary: #1a1a1a;
    --bg-secondary: #2d2d2d;
    --text-primary: #e0e0e0;
    --text-secondary: #a0a0a0;
    --accent: #4a9eff;
}

body {
    /* colors */
    color: var(--text-primary);
    background-color: var(--bg-primary);
    
    /* box */
    border-style: solid;
    border-color: white;
    margin: auto;
    width:70%;
    margin-top:30px;
    padding:5%;
}
p {
    width:30em;
    color:var(--text-secondary)
}
a {
    color: rgb(129, 160, 129)
}

header {
    text-align: center;
    border:solid;
}

.spread {
    display: flex;
    justify-content:space-between;
}
